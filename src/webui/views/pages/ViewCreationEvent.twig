{% extends 'Base.twig' %}

{% block title %}Créer un Événement{% endblock %}

{% block content %}
    <h1>Créer un Événement</h1>

    <form method="post" action="{{ url_for('createEvent') }}" enctype="multipart/form-data">
        <ul>
            <li>
            <label for="titre">Nom de l'Événement :</label>
            <input type="text" id="titre" name="titre" required>
            </li>

            <li>
            <label for="description">Description :</label>
            <textarea id="description" name="description" required></textarea>
            </li>

            <li>
            <label for="tarif">Tarif :</label>
            <input type="number" id="tarif" name="tarif" step="0.01" required>
            </li>

            <li>
            <label for="date_debut">Date :</label>
            <input type="date" id="date_debut" name="date_debut" required>

            <label for="date_fin">Date :</label>
            <input type="date" id="date_fin" name="date_fin" required>

            <label for="horaire">Horaire :</label>
            <input type="time" id="horaire" name="horaire" required>
            </li>

            <li>
            <label for="image">Image :</label>
            <input type="file" id="image" name="image" required>

            <label for="categorie">Categorie :</label>
            <select name="categorie" id="categorie">
                {% for categorie in categories %}
                    <option value="{{ categorie.id }}">{{ categorie.libelle }}</option>
                {% endfor %}
            </select>
            </li>

            <li><button type="submit">Créer</button></li>
        </ul>
    </form>
{% endblock %}